@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <style>
        .navbar {
            height: 80px;
            background-color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

            .navbar .navbar-brand {
                color: white;
                font-size: 24px;
                text-decoration: none;
                display: flex;
                align-items: center;
            }

                .navbar .navbar-brand img {
                    height: 40px;
                    margin-right: 10px;
                }

            .navbar ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

            .navbar li {
                margin-left: 20px;
            }

                .navbar li a {
                    color: white;
                    text-align: center;
                    padding: 14px 16px;
                    text-decoration: none;
                }

                    .navbar li a:hover {
                        background-color: #111;
                    }

        .active {
            background-color: #04AA6D;
        }
    </style>
</head>
<body>

    <!-- Navigation bar -->
    <div class="navbar">
        <a href="@Url.Action("Index", "Admin")" class="navbar-brand">
            <img src="@Url.Content("~/img/logo.jpeg")" alt="Logo" /> Tasty World
        </a>

        <ul>
            <li>@Html.ActionLink("View feedbacks", "Contact", "Admin")</li>
            <li>@Html.ActionLink("View registered users", "ViewUser", "Admin")</li>
            <li>@Html.ActionLink("View order", "ViewOrder", "Admin")</li>
            <li>@Html.ActionLink("Add food item", "Create", "Admin")</li>
            <li>@Html.ActionLink("View food item", "displayFood", "Admin")</li>
            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
        </ul>
    </div>

    <!-- Carousel Section-->
    <div class="imageSection position-relative">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/img/a1.jpeg" alt="Carousel Image 1" height="850">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/a2.jpeg" alt="Carousel Image 2" height="850">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/a3.jpeg" alt="Carousel Image 3" height="850">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>



